@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Suppliers)
            {
                <tr>
                    <td>@item</td>
                </tr>
            }
        </tbody>
    </table>
    </hr>
    <div class="row">
        <p>Enter a name for supplier: </p>
        <form method="POST">
            <div>
                <input id="insert" name="CompanyName" asp-for="Supplier.CompanyName" />
            </div>
            <input type="submit" />
        </form>
    </div>

    </hr>
    <div class="row">
        <p>DELETE </p>
        <form method="POST">
            <div>
                <input id="delete" name="CompanyName" asp-for="Supplier.CompanyName" />
            </div>
            <input type="submit" />
        </form>
    </div>

</div>